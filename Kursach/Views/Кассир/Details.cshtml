@model Kursach.Кассир

@{
    ViewBag.Title = "Подробности";
}
    <style>
        .chek {
            text-decoration: none;
            font-family: sans-serif;
            color: #2a3132;
            display: inline-block;
            padding: 3px;
            border-bottom: 5px solid #2a3132;
            font-weight: bold;
        }

        .chekbutton {
            background-color: #2a3132;
            font-weight: bold;
            color: #90afc5;
        }

        .tableName {
            width: 300px;
        }

        .tableComment {
            width: 700px;
        }
    </style>
<h2 class=" chek">Отзывы</h2>

<div>
    <h4>Кассир</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Фамилия
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Фамилия)
        </dd>

        <dt>
            Имя
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Имя)
        </dd>

        <dt>
            Отчество
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Отчество)
        </dd>

        <dt>
            Принят на работу
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Принят_на_работу)
        </dd>

        <dt>
            Уволен
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Уволен)
        </dd>



    </dl>
    <hr />
    @using (Html.BeginForm("AddComment", "Кассир", FormMethod.Post))
    {
        <input type="hidden" value="@Model.Id_Кассира" name="idCashier" />
        <label>Ваше имя:</label>
        <input type="text" name="name" />
        <label>Отзыв:</label>
        <input type="text" name="comment" />
        <input type="submit" value="&#10004; Добавить" class="btn btn-default chekbutton" />

    }
    <table>
        <tr style="font-weight: bold;">
            <th class="tableName">
                Имя
            </th>
            <th class=" tableComment">
                Отзыв
            </th>
        </tr>
        @foreach (var item in Model.CommentCashier)
        {
            <tr>
                <td class="tableName">
                    @Html.DisplayFor(modelItem => item.Nickname)
                </td>
                <td class=" tableComment">
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Назад", "Index")
</p>
