@model Kursach.Чек_Покупки

@{
    ViewBag.Title = "Delete";
}

<style>
    .chek {
        text-decoration: none;
        font-family: sans-serif;
        color: #2a3132;
        display: inline-block;
        padding: 3px;
        border-bottom: 5px solid #2a3132;
        font-weight: bold;
    }
</style>

<h2 class="chek">
    Удаление
</h2>

<h3>Вы уверены, что хотите удалить данный чек?</h3>
<div>
    <h4>Чек покупки</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Дата и время
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Дата_и_время_покупки)
        </dd>

        <dt>
            Номер кассы
        </dt>

        <dd>
            @Html.DisplayFor(model => model.C__Кассы.Наименование)
        </dd>

        <dt>
            Вид оплаты
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Вид_оплаты.Наименование)
        </dd>

        <dt>
            Кассир
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Кассир.Фамилия)
            @Html.DisplayFor(model => model.Кассир.Имя)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="&#10008; Удалить" class="btn btn-default" style="background-color: #fb5d5d; color: azure" /> |
            @Html.ActionLink("Назад", "Index")
        </div>
    }
</div>