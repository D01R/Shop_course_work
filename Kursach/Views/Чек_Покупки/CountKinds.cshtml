@model Kursach.CountKinds

@{
    ViewBag.Title = "CountKinds";
}
<style>
    .chek {
        text-decoration: none;
        font-family: sans-serif;
        color: #2a3132;
        display: inline-block;
        padding: 3px;
        border-bottom: 5px solid #2a3132;
        font-weight: bold;
    }
</style>

<h2 class="chek">
    Количество
</h2>

<table class="table">
    <tr style="background-color:#90afc5; color:#2a3132; font-weight: bold">
        <th>
            Вид оплаты
        </th>
        <th>
            Количество
        </th>
    </tr>
    @foreach (Вид_оплаты item in Model.kind)
    {
        <tr>
            <td>
                @item.Наименование
            </td>
            <td>
                @Model.chek.Count(chek => chek.Вид_оплаты.Наименование == item.Наименование)
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Назад", "Index", "Чек_Покупки", new { chek = Model }, null)
</p>