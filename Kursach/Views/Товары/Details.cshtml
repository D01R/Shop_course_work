@model Kursach.Товары

@{
    ViewBag.Title = "Details";
}
<style>
    .chek {
        text-decoration: none;
        font-family: sans-serif;
        color: #2a3132;
        display: inline-block;
        padding: 3px;
        border-bottom: 5px solid #2a3132;
        font-weight: bold;
    }

    .chekbutton {
        background-color: #2a3132;
        font-weight: bold;
        color: #90afc5;
    }
    .tableName{
        width:300px;

    }
    .tableComment{
        width:700px;
    }
</style>
<h2 class="chek">Отзывы</h2>

<div>
    <h4>Товары</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Товар
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Наименование)
        </dd>

        <dt>
            Категория
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Категория.Наименование)
        </dd>

    </dl>
    <hr />
    @using (Html.BeginForm("AddComment", "Товары", FormMethod.Post))
    {
        <input type="hidden" value="@Model.Id_Товара" name="idProduct" />
        <label>Ваше имя:</label>
        <input type="text" name="name" />
        <label>Отзыв:</label>
        <input class="tableComment" type="text" name="comment" />
        <input type="submit" value="&#10004; Добавить" class="btn btn-default chekbutton" />

    }
    <table >
        <tr style="font-weight:bold;">
            <th class=" tableName">
                Имя
            </th>
            <th class=" tableComment">
                Отзыв
            </th>
        </tr>
        @foreach (var item in Model.CommentProduct)
        {
            <tr>
                <td class="tableName">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class=" tableComment">
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
            </tr>
            <hr />
        }
    </table>
</div>
<p>
    @Html.ActionLink("Назад", "Index")
</p>
